{
    "title": "蓝莺 IM - 专业SDK，私有云按月付费",
    "description": "API文档及文章分享",
    "author": "jinhai",
    "output.name": "site",
    "language": "zh-hans",
    "gitbook": "3.2.3",
    "root": ".",
    "styles": {
        "website": "assets/styles/website.css"
    },
    "structure": {
        "readme": "README.md"
    },
    "plugins": [
        "github-buttons@2.1.0",
        "edit-link@^2.0.2",
        "-sharing",
        "sharing-plus@^0.0.2",
        "-highlight",
        "prism@^2.1.0",
        "prism-themes@^0.0.2",
        "-lunr",
        "-search",
        "search-plus@^0.0.11",
        "advanced-emoji@^0.2.1",
        "expandable-chapters-small@^0.1.7",
        "tbfed-pagefooter@^0.0.1",
        "versions-select@^0.1.1",
        "terminal@^0.3.2",
        "code@^0.1.0",
        "splitter@^0.0.8",
        "favicon@^0.0.2",
        "image-captions@^3.1.0",

        "logo@^0.0.2",
        "intopic-toc@^1.1.1"
    ],

    "pluginsConfig": {
        "theme-default": {
            "showLevel": false
        },
        "prism": {
            "css": [
                "prism-themes/themes/prism-base16-ateliersulphurpool.light.css"
            ]
        },
        "github-buttons": {
            "repo": "maxim-top/im.gitbook",
            "types": [
                "star"
            ],
            "size": "small"
        },
        "include-codeblock": {
            "template": "ace",
            "unindent": true,
            "edit": true
        },
        "tbfed-pagefooter": {
            "copyright": "© 2019-2022 美信拓扑 | <a href='https://lanyingim.com' style='text-decoration:none!important;'>官网</a>",
            "modify_label": "该文件修订时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "simple-page-toc": {
            "maxDepth": 3,
            "skipFirstH1": true
        },
        "edit-link": {
            "base": "https://github.com/maxim-top/im.gitbook/blob/master",
            "label": "在GitHub上编辑"
        },
        "favicon": {
            "shortcut": "/assets/favicon.ico",
            "bookmark": "/assets/favicon.ico"
        },
        "terminal": {
            "copyButtons": true,
            "fade": false,
            "style": "flat"
        },

        "versions": {
            "type":"languages",
            "options": [
                {
                    "value": "/",
                    "text": "简体中文"
                },
                {
                    "value": "/en/",
                    "text": "English"
                }
            ]
        },
        "sharing": {
           "douban": true,
           "facebook": false,
           "google": false,
           "hatenaBookmark": false,
           "instapaper": false,
           "line": false,
           "linkedin": false,
           "messenger": false,
           "pocket": false,
           "qq": true,
           "qzone": false,
           "stumbleupon": false,
           "twitter": false,
           "viber": false,
           "vk": false,
           "weibo": true,
           "whatsapp": false,
           "all": [
               "facebook", "google", "twitter",
               "weibo", "instapaper", "linkedin",
               "pocket", "stumbleupon", "qq", "qzone","douban","line","whatsapp"
           ]
       },
       "logo":{
	        "logo": "/assets/lanying-logo-color.png",
            "logoStyle": "width: 200px;align: left;",
            "url": "https://lanyingim.com"
	    },
        "intopic-toc": {
            "selector": ".markdown-section h1, .markdown-section h2, .markdown-section h3",
            "mode": "nested",
            "maxDepth": 3,
            "isCollapsed": false,
            "isScrollspyActive": true,
            "visible": true,
            "label": "内容"
        },
        "language-picker": {
            "grid-columns": 3
        },
        "image-captions": {
            "caption": "_CAPTION_"
        }
    }
}
